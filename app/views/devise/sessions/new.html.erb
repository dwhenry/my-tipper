
<div class="site-section bg-light" data-aos="fade-up">
  <div class="container">
    <div class="row align-items-first">
      <div class="col-md-7">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'bg-white' }) do |f| %>
          <div class="p-3 p-lg-5 border">
            <div class="form-group row">
              <div class="col-md-12">
                <%= f.label :email, class: "text-black" do %>
                  Email <span class="text-danger">*</span>
                <% end %>
                <%= f.email_field :email, autofocus: true, class: "form-control" %>
              </div>
            </div>
            <div class="form-group row">
              <div class="col-md-12">
                <%= f.label :password, class: "text-black" do %>
                  Password <span class="text-danger">*</span>
                <% end %>
                <%= f.password_field :password, class: "form-control" %>
              </div>
            </div>

            <div class="form-group row">
              <div class="col-md-12">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            </div>

            <div class="form-group row">
              <div class="col-lg-12">
                <%= f.submit "Login", class: "btn btn-primary btn-lg btn-block" %>
              </div>
            </div>

            <div class="form-group row">
              <div class="col-lg-12">
                <%= render "devise/shared/links" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
